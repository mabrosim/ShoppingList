<resources>

    <style name="EditTextStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:inputType">textAutoComplete|textAutoCorrect|textCapSentences</item>
        <item name="android:background">@drawable/text_edit_rounded_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditTexTitleStyleNoMargin" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_rounded_background</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextLineLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditButtonStyleNoMargin" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_clear_grey_400_24dp</item>
        <item name="android:onClick">onButtonClick</item>
    </style>

    <style name="EditButtonStyle2" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="EditButtonStyle" parent="EditButtonStyleNoMargin">
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="EditTexTitleStyle" parent="EditTexTitleStyleNoMargin">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

</resources>
